# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Kotlin source files
[*.kt]
indent_size = 2
max_line_length = 120

# Java source files
[*.java]
indent_size = 2

# Gradle build scripts
[*.gradle]
indent_size = 2

# Markdown files: don't strip whitespace
[*.md]
trim_trailing_whitespace = false
