{
  "name": "upcoming",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/upcoming/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "dependsOn": [
        {
          "projects": ["graphql-api"],
          "target": "codegen"
        }
      ],
      "options": {
        "outputPath": "dist/apps/upcoming",
        "browser": "apps/upcoming/src/main.ts",
        "tsConfig": "apps/upcoming/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/upcoming/public"
          }
        ],
        "styles": [
          "node_modules/leaflet/dist/leaflet.css",
          "apps/upcoming/src/theme/variables.scss",
          "apps/upcoming/src/global.scss",
          "apps/upcoming/src/styles.scss"
        ],
        "polyfills": ["zone.js"],
        "server": "apps/upcoming/src/main.server.ts",
        "ssr": {
          "entry": "apps/upcoming/src/server.ts"
        },
        "outputMode": "server",
        "allowedCommonJsDependencies": [
          "dayjs",
          "dayjs/locale/de",
          "dayjs/plugin/weekday",
          "dayjs/plugin/relativeTime",
          "leaflet"
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "1mb",
              "maximumError": "3mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "upcoming:build:production"
        },
        "development": {
          "buildTarget": "upcoming:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "dependsOn": [
        {
          "projects": ["graphql-api"],
          "target": "codegen"
        }
      ],
      "options": {
        "jestConfig": "apps/upcoming/jest.config.cts",
        "tsConfig": "apps/upcoming/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "dependsOn": [
        {
          "projects": ["graphql-api"],
          "target": "codegen"
        }
      ],
      "options": {
        "buildTarget": "upcoming:build",
        "port": 4200,
        "staticFilePath": "dist/apps/upcoming/browser",
        "spa": true
      }
    }
  }
}
